@using BlogPersonal.Entities
@using BlogPersonal.Models.View
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Lista de Post";
}
@model List<ShortPostViewModel>
<div class="mx-[60px] gap-[15px] flex flex-col justify-center 2xl:mx-[300px]">
    <h4 class="text-[40px] inter-bold text-white"><a asp-action="Index" class="fa-solid fa-arrow-left text-[32px] text-[var(--primary-color)] hover:text-[var(--secondary-color)]"></a>    Lista de usuarios</h4>
    <table class="table-auto hover:border-collapse">
        <thead class="bg-[var(--primary-color)] text-white">
            <tr>
                <th scope="col" class="px-6 py-4">#</th>
                <th scope="col" class="px-6 py-4">Titulo</th>
                <th scope="col" class="px-6 py-4">Descripción</th>
                <th scope="col" class="px-6 py-4">Fecha publicacion</th>
                <th scope="col" class="px-6 py-4">Gestionar</th>
            </tr>
        </thead>
        <tbody class="bg-[var(--secondary-body-color)] text-white">
            @foreach (var item in Model)
            {
                <tr class="border-white/10 border-b text-center">
                    <td class="whitespace-nowrap px-6 py-4 font-medium">@item.Id</td>
                    <td class="px-6 py-4">@item.Title</td>
                    <td class="px-6 py-4">@item.ShortDescription</td>
                    <td class="whitespace-nowrap px-6 py-4">@item.PublishDate</td>
                    <td class="whitespace-nowrap px-6 py-4"><a asp-action="DeletePost" asp-route-idPost="@item.Id" class="bg-[var(--primary-color)] transition-[.2s] rounded-[6px] inter-bold p-2 text-white hover:bg-[var(--secondary-color)]">Eliminar   <i class="fa-solid fa-trash"></i></a></td>
                    
                </tr>
            }
        </tbody>
    </table>
</div>
@section Scripts
{
}