@using BlogPersonal.Entities
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Lista de usuarios";
}
@model List<AppUser>
<div class="mx-[60px] gap-[15px] flex flex-col justify-center 2xl:mx-[300px]">
    <h4 class="text-[40px] inter-bold text-white"><a asp-action="Index" class="fa-solid fa-arrow-left text-[32px] text-[var(--primary-color)] hover:text-[var(--secondary-color)]"></a>    Lista de usuarios</h4>
    <table class="table-auto hover:border-collapse">
        <thead class="bg-[var(--primary-color)] text-white">
            <tr>
                <th scope="col" class="px-6 py-4">#</th>
                <th scope="col" class="px-6 py-4">Nombre</th>
                <th scope="col" class="px-6 py-4">Apellido</th>
                <th scope="col" class="px-6 py-4">Email</th>
                <th scope="col" class="px-6 py-4">Fecha de nac</th>
                <th scope="col" class="px-6 py-4">Username</th>
            </tr>
        </thead>
        <tbody class="bg-[var(--secondary-body-color)] text-white">
            @foreach (var item in Model)
            {
                <tr class="border-white/10 border-b text-center">
                    <td class="whitespace-nowrap px-6 py-4 font-medium">@item.Id</td>
                    <td class="whitespace-nowrap px-6 py-4">@item.FirstName</td>
                    <td class="whitespace-nowrap px-6 py-4">@item.LastName</td>
                    <td class="whitespace-nowrap px-6 py-4">@item.Email</td>
                    <td class="whitespace-nowrap px-6 py-4">@item.BirthDate.ToString("dd-MM-yyyy")</td>
                    <td class="whitespace-nowrap px-6 py-4">@item.UserName</td>
                </tr>
            }
        </tbody>
    </table>
</div>